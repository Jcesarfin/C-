<Window x:Class="MeuProjetoWPF.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeuProjetoWPF"
        mc:Ignorable="d"
        Title="Cadastro" Height="300" Width="300" Background="#FF8EDAC5">
    <Grid>
        <Label x:Name="cadastro" Content="Cadastro Cliente" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <Label x:Name="nome" Content="Nome:" HorizontalAlignment="Left" Margin="28,41,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="txtNome" HorizontalAlignment="Left" Height="23" Margin="73,45,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" LostFocus="nome1_LostFocus"/>
        <Button x:Name="btnSalvar" Content="Salvar" HorizontalAlignment="Left" Margin="193,222,0,0" VerticalAlignment="Top" Width="75" FontWeight="Bold"/>

    </Grid>
</Window>
